     //dateConverter
     function convertDate(date, symbol, new_symbol) {

         if (date != '') {
             var raw_date = date;
             if (raw_date.indexOf(symbol) > 0) {
                 day = raw_date.substr(0, 2);
                 month = raw_date.substr(3, 2);
                 year = raw_date.substr(6, 4);

                 return (year + new_symbol + month + new_symbol + day).toString();

             } else {
                 return date;
             }
         } else {
             return date;
         }
     }
