        var jQuery_3_3_1 = $.noConflict(true);
    </script>
    <script src="js/jquery.toast.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#dataTable').DataTable({
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf', 'colvis'],
                "order": [[0, "desc"]]
            });

            table.buttons().container()
                .appendTo('#dataTable_wrapper .col-md-6:eq(0)');

            jQuery_3_3_1("#dataTable").on("click", ".delete_record", function (e) {
                e.preventDefault();

                var pid = $(this).attr('data-id');

                bootbox.confirm({
                    title: "<i class='fa fa-trash-alt'></i> Delete record?",
                    message: "Do you wish to delete this record?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {

                        if (result == true) {

                            showToast('Deleting staff surrender request');
                            // showToast(pid);

                            jQuery.ajax({
                                url: 'AdvanceSurrenders.aspx/DeleteRecord',
                                type: "POST",
                                data: '{param1:"' + pid + '"}',
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (response) {

                                    if (response != null && response.d != null) {
                                        var data = response.d;
                                        // alert(typeof (data)); //it comes out to be string
                                        //we need to parse it to JSON
                                        data = $.parseJSON(data);

                                        hideLoading();

                                        bootbox.alert({
                                            message: data.Message,
                                            callback: function () {
                                                window.setTimeout(function () {
                                                    location.reload()
                                                }, 1000);
                                            }
                                        })
                                    }
                                },
                                error: function () {
                                    bootbox.error({ title: "System error", message: "An error occured." });
                                }
                            });
                        }
                    }
                });
            });
            jQuery_3_3_1("#dataTable").on("click", ".submit_record", function (e) {
                e.preventDefault();

                var pid = $(this).attr('data-id');

                bootbox.confirm({
                    title: "<i class='fa fa-paper-plane'></i> Submit staff surrender?",
                    message: "Do you wish to submit this staff surrender?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {

                        if (result == true) {

                            showToast('Submitting staff surrender request');
                            // showToast(pid);

                            jQuery.ajax({
                                url: 'AdvanceSurrenders.aspx/SubmitRecord',
                                type: "POST",
                                data: '{param1:"' + pid + '"}',
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (response) {

                                    if (response != null && response.d != null) {
                                        var data = response.d;
                                        // alert(typeof (data)); //it comes out to be string
                                        //we need to parse it to JSON
                                        data = $.parseJSON(data);

                                        hideLoading();


                                        if (data.Status != "000") {
                                            hideLoading();
                                            bootbox.error({ title: "Approval error", message: data.Message });
                                        } else {

                                            bootbox.alert({
                                                message: data.Message,
                                                callback: function () {
                                                    window.setTimeout(function () {
                                                        window.location.href = 'AdvanceSurrenders.aspx?status=Pending';
                                                    }, 1000);
                                                }
                                            })
                                        }

                                    }
                                },
                                error: function () {
                                    // bootbox.error({ title: "System error", message: "An error occured." });
                                    hideLoading();

                                    bootbox.alert({
                                        message: "The advance request was successfully sent for approval",
                                        callback: function () {
                                            window.setTimeout(function () {
                                                window.location.href = 'AdvanceSurrenders.aspx?status=Pending';
                                            }, 1000);
                                        }
                                    })
                                },
                                timeout: 10000
                            });
                        }
                    }
                });
            });
            jQuery_3_3_1("#dataTable").on("click", ".cancel_record", function (e) {
                e.preventDefault();

                var pid = $(this).attr('data-id');

                bootbox.confirm({
                    title: "<i class='fa fa-times'></i> Cancel approval request?",
                    message: "Do you wish to cancel the approval request?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {

                        if (result == true) {

                            showToast('Cancelling approval request');
                            // showToast(pid);

                            jQuery.ajax({
                                url: 'AdvanceSurrenders.aspx/CancelRequest',
                                type: "POST",
                                data: '{param1:"' + pid + '"}',
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (response) {

                                    if (response != null && response.d != null) {
                                        var data = response.d;
                                        // alert(typeof (data)); //it comes out to be string
                                        //we need to parse it to JSON
                                        data = $.parseJSON(data);

                                        hideLoading();

                                        bootbox.alert({
                                            message: data.Message,
                                            callback: function () {
                                                window.setTimeout(function () {
                                                    location.reload()
                                                }, 1000);
                                            }
                                        })
                                    }
                                },
                                error: function () {
                                    bootbox.error({ title: "System error", message: "An error occured." });
                                }
                            });
                        }
                    }
                });
            });
            jQuery_3_3_1("#dataTable").on("click", ".delegate_record", function (e) {
                e.preventDefault();

                var pid = $(this).attr('data-id');

                bootbox.confirm({
                    title: "<i class='fa fa-fighter-jet'></i> Delegate approval request?",
                    message: "Do you wish to delegate this approval request?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {

                        if (result == true) {

                            showToast('Delegating approval request');
                            // showToast(pid);

                            jQuery.ajax({
                                url: 'AdvanceSurrenders.aspx/DelegateRequest',
                                type: "POST",
                                data: '{param1:"' + pid + '"}',
                                dataType: "json",
                                contentType: "application/json; charset=utf-8",
                                success: function (response) {

                                    if (response != null && response.d != null) {
                                        var data = response.d;
                                        // alert(typeof (data)); //it comes out to be string
                                        //we need to parse it to JSON
                                        data = $.parseJSON(data);

                                        hideLoading();

                                        bootbox.alert({
                                            message: data.Message,
                                            callback: function () {
                                                window.setTimeout(function () {
                                                    location.reload()
                                                }, 1000);
                                            }
                                        })

                                    }
                                },
                                error: function () {
                                    // bootbox.error({ title: "System error", message: "An error occured." });
                                    hideLoading();

                                    bootbox.alert({
                                        message: "The advance request was successfully delegated",
                                        callback: function () {
                                            window.setTimeout(function () {
                                                window.location.href = 'AdvanceSurrenders.aspx?status=Pending';
                                            }, 1000);
                                        }
                                    })
                                },
                                timeout: 10000
                            });
                        }
                    }
                });
            });
            jQuery_3_3_1("#dataTable").on("click", ".print_advancesurrender", function (e) {
                e.preventDefault();

                var pid = $(this).attr('data-id');

                jQuery.ajax({
                    url: 'AdvanceSurrenders.aspx/PrintRequest',
                    type: "POST",
                    data: '{param1:"' + pid + '"}',
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {

                        if (response != null && response.d != null) {
                            var data = response.d;
                            // alert(typeof (data)); //it comes out to be string
                            //we need to parse it to JSON
                            data = $.parseJSON(data);

                            hideLoading();

                            bootbox.confirm({
                                title: "<i class='fa fa-print'></i> Print?",
                                message: "Do you wish to print this staff surrender?",
                                buttons: {
                                    confirm: {
                                        label: 'Yes',
                                        className: 'btn-success'
                                    },
                                    cancel: {
                                        label: 'No',
                                        className: 'btn-danger'
                                    }
                                },
                                callback: function (result) {

                                    if (result == true) {

                                        window.location.href = "uploads/" + pid + ".pdf";

                                    }
                                }
                            });

                        }
                    },
                    error: function () {
                        hideLoading();
                    },
                    timeout: 10000
                });
            });
        });
        function showToast(modaltittle) {
            var title = modaltittle;
            var icon = 'loading';
            var duration = 50000 * 1;
            $.Toast.showToast({ title: title, duration: duration, icon: icon, image: '' });
        }
        function hideLoading() {
            $.Toast.hideToast();
        }
    </script>

