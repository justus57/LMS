@model OshoPortal.Models.Dashboard

@{ ViewBag.Title = "Dashboard"; }
<!-- =======================================================
* Project Name: Osho Chemical Portal
* Developer: Justus Kasyoki
======================================================== -->
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard","Dashboard")">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard">

        <div class="content">
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-user">
                        <div class="image">
                            @*<img src="~/Content/assets/img/logo.png" alt="...">*@
                            
                        </div>
                        <div class="card-body">
                            <div class="author">
                                <a href="#"></a>
                                    @*<img class="avatar border-gray" src="~/Content/assets/img/logo.png" alt="...">*@
                                    <img src="~/Content/assets/img/logo.png" alt="Avatar" class="avatar">
                                    <h5 class="center">@Html.Raw(ViewBag.Greetings)</h5>                             
                                <p class="description">                                  
                                </p>
                            </div>
                        </div>
                        <div class="card-footer">                          
                            <div class="button-container">
                                <div class="row">
                                    <div class="col-lg-3 col-md-6 col-6 ml-auto">
                                        
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">

                                    </div>
                                    <div class="col-lg-3 mr-auto">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <div class="card card-user">
                        <div class="card-header">
                            <h5 class="card-title">@Html.Raw(ViewBag.user) Profile</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-5 pr-1">
                                        <div class="form-group">
                                            <label>Company Name</label>
                                            <input type="text" class="form-control" disabled="" placeholder="Company" value="OSHO Chemicals">
                                        </div>
                                    </div>
                                    <div class="col-md-3 px-1">
                                        <div class="form-group">
                                            <label>Username</label>
                                            @*<input type="text" class="form-control" placeholder="Username" value="michael23">*@
                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control ", @readonly = "readonly", id = "Username", autofocus = "" })

                                        </div>
                                    </div>
                                    <div class="col-md-4 pl-1">
                                        <div class="form-group">
                                            <label>Title</label>
                                            @*<input type="email" class="form-control" placeholder="Email">*@
                                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control ", @readonly = "readonly", id = "Title", autofocus = "" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 pr-1">
                                        <div class="form-group">
                                            <label>First Name</label>
                                            @*<input type="text" class="form-control" placeholder="Company" value="Chet">*@
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control ", @readonly = "readonly", id = "FirstName", autofocus = "" })

                                        </div>
                                    </div>
                                    <div class="col-md-6 pl-1">
                                        <div class="form-group">
                                            <label>Last Name</label>
                                            @*<input type="text" class="form-control" placeholder="Last Name" value="Faker">*@
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control textarea", @readonly = "readonly", id = "LastName", autofocus = "" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Email address</label>
                                            @*<input type="text" class="form-control" placeholder="Home Address" value="Melbourne, Australia">*@
                                            @Html.TextBoxFor(m => m.email, new { @class = "form-control textarea", @readonly = "readonly", id = "email", autofocus = "" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 pr-1">
                                        <div class="form-group">
                                            <label>BirthDate</label>
                                            @*<input type="text" class="form-control" placeholder="City" value="Melbourne">*@
                                            @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control textarea", @readonly = "readonly", id = "BirthDate", autofocus = "" })

                                        </div>
                                    </div>
                                    <div class="col-md-4 px-1">
                                        <div class="form-group">
                                            <label>EmploymentDate</label>
                                            @*<input type="text" class="form-control" placeholder="Country" value="Australia">*@
                                            @Html.TextBoxFor(m => m.EmploymentDate, new { @class = "form-control textarea",  @readonly = "readonly", id = "Country", autofocus = "" })

                                        </div>
                                    </div>
                                    <div class="col-md-4 pl-1">
                                        <div class="form-group">
                                            <label>Bank Account</label>
                                            @*<input type="number" class="form-control" placeholder="ZIP Code">*@
                                            @Html.TextBoxFor(m => m.BankAccountNo, new { @class = "form-control textarea", type = "number", @readonly = "readonly", id = "BankAccountNo", autofocus = "" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>About Me</label>
                                            @*<textarea class="form-control textarea" ></textarea>*@
                                            @Html.TextAreaFor(m => m.about, new { @class = "form-control textarea", @readonly = "readonly", id = "about", autofocus = "" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="update ml-auto mr-auto">
                                        @*<button type="submit" class="btn btn-primary btn-round">Update Profile</button>*@
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
